{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "gerwinjansen/focaliber",
  "description": "The boilerplate for the website of Focaliber",
  "license": "proprietary",
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "2.2.0",
    "vlucas/phpdotenv": "5.5.0",
    "oscarotero/env": "2.1.0",
    "roots/bedrock-autoloader": "1.0.4",
    "roots/wordpress": "6.1",
    "roots/wp-config": "1.0.0",
    "wpackagist-plugin/password-hash": "2.1",
    "wpackagist-theme/chic-lite": "1.1.1"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "public_html/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public_html/plugins/{$name}/": ["type:wordpress-plugin"],
      "public_html/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public_html/core"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ]
  }
}
